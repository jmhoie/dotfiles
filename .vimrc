" GENERAL
set history=500
set so=10
set wildmenu
set ruler
set cmdheight=1
set hid
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set ignorecase
set smartcase
set hlsearch
set incsearch
set lazyredraw
set showmatch
set mat=2
set noerrorbells
set novisualbell
set t_vb=
set tm=500
hi colorcolumn ctermbg=grey
set colorcolumn=80

" COLORS AND FONTS
syntax off
set regexpengine=0
set encoding=utf8

" FILES, BACKUPS, UNDO
set nobackup
set nowb
set noswapfile

" TEXT, TAB, INDENT
set et
set sta
set sw=4
set ts=4
set lbr
set tw=500
set ai
set si
set nowrap

" STATUSLINE
set laststatus=2

"NETRW
let g:netrw_banner=1
let g:netrw_liststyle=1
